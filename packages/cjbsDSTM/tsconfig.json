{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "type/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@atoms/*": ["/atoms/*"],
      "@molecules/*": ["molecules/*"],
      "@organisms/*": ["organisms/*"],
      "@layouts/*": ["layouts/*"],
      "@themes/*": ["themes/*"],
      "@commonFunc/*": ["commonFunc/*"]
    }
  },
  "exclude": ["dist", "build", "node_modules"]
}
